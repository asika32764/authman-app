{
  "appId": "io.authman",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "publish": {
    "provider": "github",
    "publishAutoUpdate": true
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": false
  },
  "win": {
    "target": "nsis",
    "icon": "assets/appIcon.png",
    "artifactName": "${productName}.${ext}"
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg",
    "icon": "assets/appIcon.png",
    "artifactName": "${productName}.${ext}"
  }
}
